<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/drawerItemBackground"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/actv_title"
                android:layout_width="match_parent"
                android:layout_height="?android:actionBarSize"
                android:background="@color/colorWhite"
                android:gravity="center"
                android:text="TMT STEEL"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_05"
                android:layout_marginTop="@dimen/dp_05"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/dp_10"
                android:weightSum="1.0">

                <ImageView
                    android:id="@+id/iv_product_image"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:adjustViewBounds="true"
                    android:minHeight="150dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/groomingslider2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:text="Color"
                    android:layout_marginTop="15dp"/>

                <Spinner
                    android:id="@+id/spinner_color"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_10"
                    android:spinnerMode="dialog" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_colors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"></android.support.v7.widget.RecyclerView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="7dp"/>

                <TextView
                    android:id="@+id/actv_description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|start"
                    android:maxLines="5"
                    android:paddingStart="@dimen/dp_05"
                    android:layout_margin="5dp"
                    android:text="cscsjk sjbcjsbc csjbc cjskbc js csjk scskc skcc sc jsk cjsjk ckks cks cks cscsjk sjbcjsbc csjbc cjskbc js csjk scskc skcc cscsjk sjbcjsbc csjbc cjskbc" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Brand"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="7dp"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/actv_brand"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|start"
                    android:maxLines="5"
                    android:paddingStart="@dimen/dp_05"
                    android:layout_margin="5dp"
                    android:text="cscsjk sjbcjsbc csjbc cjskbc js csjk scskc skcc sc jsk cjsjk ckks cks cks cscsjk sjbcjsbc csjbc cjskbc js csjk scskc skcc cscsjk sjbcjsbc csjbc cjskbc" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:minHeight="30dp"
                android:padding="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_trace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp" />

                <LinearLayout
                    android:id="@+id/ll_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Type  :  "
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Type"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_05"
                    android:padding="@dimen/dp_10"
                    android:visibility="gone"
                    android:text="SELECT QUANTITY"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_16" />

                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:visibility="gone"
                    android:layout_marginStart="@dimen/dp_10"
                    android:textColor="@color/colorBlack" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_05"
                    android:padding="@dimen/dp_10"
                    android:visibility="gone"
                    android:text="SELECT BRANDS"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_16" />

                <Spinner
                    android:id="@+id/sp_select_brand"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="@dimen/dp_30"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:visibility="gone"
                    android:layout_marginStart="@dimen/dp_10"
                    android:spinnerMode="dialog" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_05"
                    android:padding="@dimen/dp_10"
                    android:visibility="gone"
                    android:text="SELECT TYPES"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_16" />

                <Spinner
                    android:id="@+id/sp_select_type"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="@dimen/dp_30"
                    android:visibility="gone"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_10"
                    android:spinnerMode="dialog" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_05"
                    android:padding="@dimen/dp_10"
                    android:text="SELECT SIZE"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_16" />

                <Spinner
                    android:id="@+id/spinner_select_size"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_10"
                    android:spinnerMode="dialog" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_05"
                    android:padding="@dimen/dp_10"
                    android:text="QUANTITY"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_16" />

                <EditText
                    android:id="@+id/et_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Quantity"
                    android:inputType="number"/>


                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_05"
                    android:padding="@dimen/dp_10"
                    android:text="SELECT COLOR"
                    android:visibility="gone"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_16" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_select_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/dp_05" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_item_add_to_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_10"
                android:background="@drawable/round_btn"
                android:text="ADD TO CART"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>