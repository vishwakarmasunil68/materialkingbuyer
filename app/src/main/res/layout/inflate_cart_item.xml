<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_05"
    app:dragEdge="right"
    app:mode="same_level">

    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_margin="5dp"
        android:background="#C04933">

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="@dimen/dp_20"
            android:src="@drawable/cut_icon" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="5dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/colorWhite">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_item_image_cart"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:adjustViewBounds="true"
                        android:padding="@dimen/dp_10"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_default_category" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tv_item_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Bharathi OPC 43 Grade"
                                android:textSize="16sp"
                                android:textColor="#000000"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:id="@+id/ll_brand"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="5dp"
                                android:weightSum="3">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Brand"
                                    android:textColor="#000000"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=":" />

                                <TextView
                                    android:id="@+id/tv_brand"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="7dp"
                                    android:layout_weight="2"
                                    android:text="Brand" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_size"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Size"
                                    android:textColor="#000000"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=":" />

                                <TextView
                                    android:id="@+id/tv_size"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="7dp"
                                    android:layout_weight="2"
                                    android:text="Size" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:paddingBottom="@dimen/dp_05"
                        android:paddingTop="@dimen/dp_05"
                        android:text="Qty"
                        android:textSize="@dimen/sp_16" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_minus_item"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_minus_icon"
                        android:textStyle="bold" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_quantity_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:layout_marginStart="@dimen/dp_15"
                        android:background="@drawable/cart_quantity_background"
                        android:paddingBottom="@dimen/dp_05"
                        android:paddingEnd="@dimen/dp_20"
                        android:paddingStart="@dimen/dp_20"
                        android:paddingTop="@dimen/dp_05"
                        android:text="10"
                        android:textSize="@dimen/sp_16" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_plus_item"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_plus_icon" />

                </LinearLayout>


            </LinearLayout>


        </android.support.v7.widget.CardView>

    </FrameLayout>

</com.chauthai.swipereveallayout.SwipeRevealLayout>

