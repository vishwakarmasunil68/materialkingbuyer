<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tab_selected_indicator_background"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="Seller - 1"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_05"
            android:background="@drawable/tab_unselected_indicator_background"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:orientation="horizontal"
                android:weightSum="1.0">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".50"
                    android:text="Final Offers"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_16" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_final_offer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".50"
                    android:gravity="end"
                    android:text="15,00000 INR"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_16" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal"
                android:weightSum="1.0">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".50"
                    android:text="Shipping Charges"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_16" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_shipping_charges"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".50"
                    android:gravity="end"
                    android:text="25,000 INR"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_16" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@color/colorWhite" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="horizontal"
                android:weightSum="1.0">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".50"
                    android:text="Total"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_20"
                    android:textStyle="bold" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_total_amount_completed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".50"
                    android:text="15,00000 INR"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_20"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal"
                android:weightSum="1.0">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".50"
                    android:text="Shipping Time"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_16" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_shipping_days"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".50"
                    android:gravity="end"
                    android:text="10 Days"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_16" />


            </LinearLayout>

        </LinearLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_view_complete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/round_btn"
            android:text="View Details"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite" />

    </LinearLayout>


</LinearLayout>